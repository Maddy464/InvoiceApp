{
  "name": "InvoiceApp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap-cloud-sdk/resilience": "^4.1.2",
    "@sap/cds": "^9",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.7",
    "@sap/cloud-sdk-core": "^1.17.2",
    "base64-arraybuffer": "^1.0.2",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9.3.2",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-invoiceui": "cds watch --open invoiceui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy InvoiceApp --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": "hana",
      "[hybrid]": {
        "db": "hana"
      },
      "auth": "mocked",
      "bpa_destination": {
        "kind": "rest",
        "credentials": {
          "destination": "sbpa_process_destination"
        }
      },
      "MS_GRAPH_MAIL": {
        "kind": "rest",
        "credentials": {
          "destination": "MS_GRAPH_MAIL"
        }
      },
      "destinations": true,
      "connectivity": true
    }
  },
  "workspaces": [
    "app/*"
  ]
}
