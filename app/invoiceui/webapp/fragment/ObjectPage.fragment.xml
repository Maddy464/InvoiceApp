<core:FragmentDefinition
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core">

	<ObjectPageLayout id="objectPage"
		upperCaseAnchorBar="false"
		showFooter="{viewModel>/editable}">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
				<content>
					<m:MessageStrip id="messageStrip" visible="{viewModel>/refreshEnabled}"
						text="{i18n>refreshMessage}" type="Warning" showIcon="true">
					</m:MessageStrip>				
				</content>
				<actions>
					<m:Button id="_IDGenButton" type="Emphasized" text="{i18n>refresh}" press="onRefresh" visible="{viewModel>/refreshEnabled}"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection id="_IDGenObjectPageSection" title="{i18n>header}" titleUppercase="false">
				<subSections>
					<ObjectPageSubSection id="_IDGenObjectPageSubSection">
						<blocks>
							<core:Fragment fragmentName="invoiceui.fragment.InvoiceHeader" type="XML" />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="_IDGenObjectPageSection1" title="{i18n>items}" titleUppercase="false">
				<subSections>
					<ObjectPageSubSection id="_IDGenObjectPageSubSection1">
						<blocks>
							<core:Fragment fragmentName="invoiceui.fragment.InvoiceItems" type="XML" />
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>			
		</sections>
		<footer>
			<m:OverflowToolbar id="_IDGenOverflowToolbar">
				<m:ToolbarSpacer id="_IDGenToolbarSpacer" />
				<m:Button id="_IDGenButton1" type="Emphasized" text="{i18n>save}" press="onSave" />
			</m:OverflowToolbar>
		</footer>

	</ObjectPageLayout>
</core:FragmentDefinition>    