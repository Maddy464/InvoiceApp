<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Table id="items" busy="{viewModel>/refreshEnabled}"
		items="{invoice>/items}" inset="true">
			<columns>
			<Column id="_IDGenColumn">
				<Text id="_IDGenText" text="{i18n>description}" />
			</Column>
			<Column id="_IDGenColumn1">
				<Text id="_IDGenText1" text="{i18n>quantity}" />
			</Column>
			<Column id="_IDGenColumn2">
				<Text id="_IDGenText2" text="{i18n>unitPrice}" />
			</Column>
			<Column id="_IDGenColumn3">
				<Text id="_IDGenText3" text="{i18n>amount}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem id="_IDGenColumnListItem1">
				<cells>
					<Input id="_IDGenInput" value="{invoice>description}" editable="{viewModel>/editable}"/>
					<Input id="_IDGenInput1" value="{invoice>quantity}" editable="{viewModel>/editable}"/>
					<Input id="_IDGenInput2" value="{invoice>unitPrice}" editable="{viewModel>/editable}"/>
					<Input id="_IDGenInput3" value="{invoice>netAmount}" editable="{viewModel>/editable}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>    